<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_collection_item"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/add_collection_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/create_collection_btn_pic"
        android:src="@drawable/ic_only_plus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hkgrotesk_regular"
        android:text="@string/create_my_collection"
        android:textColor="@color/color_of_main_label_in_onboarding"
        android:textSize="18sp" />
</LinearLayout>